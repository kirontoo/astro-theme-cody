---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro';
import { siteConfig } from "../consts.ts";

interface Props {
		title?: string;
		description?: string;
		image?: string;
		articleDate?: string
}

const { 
	title = siteConfig.title, 
	description = siteConfig.description,
	image,
	articleDate
	} = Astro.props;

---
<!doctype html>
<html lang="en" class="dark">
	<head>
		<BaseHead title={title} description={description} image={image} articleDate={articleDate}/>
	</head>
	<body>
		<Header/>
		<main class="grid grid-cols-1 gap-y-16 sm:grid-cols-[3fr_1fr] sm:gap-x-4">
			<slot/>
			<slot name="sidebar"/>
		</main>
		<Footer/>
	</body>
</html
